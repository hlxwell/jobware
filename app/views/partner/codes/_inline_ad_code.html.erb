<div id="feed-control">
  <span style="color:#676767;font-size:11px;margin:10px;padding:4px;">加载中...</span>
</div>

<style>
  .gfg-listentry {
    padding-top: 5px;
    padding-bottom: 5px;
  }
</style>
<script type="text/javascript" src="http://itjob.fm/javascripts/jsapi.js"></script>
<script src="http://itjob.fm/javascripts/gfdynamicfeedcontrol.js" type="text/javascript"></script>
<style type="text/css">@import url("http://itjob.fm/stylesheets/gfdynamicfeedcontrol.css");</style>
<script type="text/javascript">
  function LoadDynamicFeedControl() {
    var feeds = [{title: 'IT招聘网', url: "<%= @rss_url %>"}];
    var options = {
      stacked : false,
      horizontal : true,
      title : "",
      displayTime : 2000,
      fadeOutTime : 500,
      numResults: 10
    }
    new GFdynamicFeedControl(feeds, 'feed-control', options);
  }

  // Load the feeds API and set the onload callback.
  google.load('feeds', '2');
  google.setOnLoadCallback(LoadDynamicFeedControl);
</script>