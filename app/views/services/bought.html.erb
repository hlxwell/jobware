<%= page_name_html("已购买的服务", :with_title => true) %>

<% show_no_record(@transactions) do %>
<table class="data-table">
	<tr>
	  <th width="50">订单号</th>
	  <th>服务名称</th>
		<th>描述</th>
		<th>购买价格</th>
		<th width="130">购买时间</th>
	</tr>
	<% @transactions.each do |tx| %>
	<tr class="even">
	  <td><%= tx.id %></td>
	  <td><%= tx.related_object.name %></td>
		<td><%= raw tx.related_object.desc %></td>
		<td><%= format_price tx.related_object.price %></td>
		<td><%= tx.created_at.to_s_datetime %></td>
	</tr>
  <% end %>
</table>
<% end %>