<div class="section network-section left" style="width: 250px">
	<div class="section-title">紧急招聘</div>
	<div class="section-content">
	  <% show_no_record(urgent_jobs = Ad.urgent_jobs.opened) do %>
		<ul class="nice-list">
		  <% urgent_jobs.each do |ad| %>
			<li>
			  <span style="float: left;"><%= link_to ad.name, ad.url, :title => ad.desc %></span>
        <span style="font-weight: bold; float: right;"><%= ad.location %></span>
        <div class="clearer">&nbsp;</div>
			</li>
		  <% end %>
		</ul>
		<% end %>
	</div>
</div>

<div class="section network-section right" style="width: 700px">
	<div class="section-title">推荐企业</div>
	<div class="section-content">
	  <% companies = Ad.featured_companies.opened.limit(3) %>
	  <% show_no_record(companies) do %>
  	<table class="data-table">
  		<tr>
  		  <% companies.each_with_index do |ad, i| %>
  			  <td class="with_tooltip" title="<%= ad.name %>"><%= link_to image_tag(ad.image.url(:bottom_ad), :class => "aligncenter bordered bottom_ad_logo"), ad.url %></td>
  			  <%= raw "</tr><tr>" if (i+1)%3 == 0 and i != 1 %>
  			<% end %>
  		</tr>
  	</table>
  	<% end %>
	</div>
</div>