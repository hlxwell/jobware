<div class="section network-section">
	<div class="section-title">推荐企业</div>
	<div class="section-content">
	  <% show_no_record(Ad.featured_companies) do %>
  	<table class="data-table">
  		<tr>
  		  <% Ad.featured_companies.each_with_index do |ad, i| %>
  			  <td><%= link_to image_tag(ad.image.url(:bottom_ad), :class => "aligncenter bordered bottom_ad_logo"), ad.url %></td>
  			  <%= raw "</tr><tr>" if (i+1)%5 == 0 and i != 1 %>
  			<% end %>
  		</tr>
  	</table>
  	<% end %>
	</div>
</div>