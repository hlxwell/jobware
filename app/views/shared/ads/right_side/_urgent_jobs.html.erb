<div class="section network-section">
	<div class="section-title">紧急招聘</div>
	<div class="section-content">
	  <% show_no_record(@urgent_jobs = Ad.urgent_jobs) do %>
		<ul class="nice-list">		  
		  <% @urgent_jobs.each do |ad| %>
			<li>
			  <span style="font-weight: bold"><%= ad.location %></span>
			  <%= link_to ad.name, ad.url, :title => ad.desc %>
			</li>
		  <% end %>
		</ul>
		<% end %>
	</div>
</div>