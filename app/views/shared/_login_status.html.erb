<% if logged_in? %>
  <!-- <span class="text-separator">|</span>  -->
  <span class="quiet">当前用户 <%= current_user.email %></span>
  <span class="text-separator">|</span> <span class="quiet"><%= link_to "修改帐号信息", edit_user_path %></span>
  <span class="text-separator">|</span> <span class="quiet"><%= link_to "退出", logout_path %></span>
<% else %>
  <!-- <span class="text-separator">|</span>  -->
  <span id="signin_signup">
    <span class="quiet"><%= link_to "登陆", login_path %></span>
    <span class="text-separator">|</span> <span class="quiet"><%= link_to "注册", signup_path %></span>
  </span>
<% end %>