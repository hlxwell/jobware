<%= field_set_tag "个人信息", :class => 'big' do %>
  <%= f.error_messages %>
  <div class="left w300 h450">
    <%= f.text_field :name, :label => "姓名", :class => "text w300", :hint => "请输入真实姓名。" %>
    <%= f.select :gender, Gender.to_a, {:include_blank => true}, {:label => "性别"} %>
    <%= f.text_field :birthday, :label => "出生年月", :class => "text w300 datepicker" %>
    <%= f.city_select :hometown_province, :hometown_city, :label => "户口所在地" %>
    <%= f.city_select :current_residence_province, :current_residence_city, :label => "现所在城市" %>
    <%= f.text_field :email, :label => "邮箱", :class => "text w300" %>
    <%= f.text_field :phone_number, :label => "联系电话", :class => "text w300" %>
    <%= f.file_field :portrait, :label => "个人照片", :class => "text w300" %>
    <%= image_tag f.object.portrait_path unless f.object.new_record? %>
  </div>

  <div class="left w300 h450" style="margin-left: 10px;">
    <%= f.select :working_years, 0..30, {:include_blank => true}, {:label => "工作年限", :hint => "请输入数字。"} %>
    <%= f.select :degree, Degree.to_a, {:include_blank => true}, {:label => "最高学历"} %>
    <%= f.text_field :major, :label => "专业", :class => "text w300" %>
    <%= f.text_field :expected_salary, :label => "期待薪资", :class => "text w300" %>
    <%= f.text_field :expected_positions, :label => "希望应聘的岗位", :class => "text w300" %>
    <%= f.text_field :expected_job_location, :label => "希望工作的地点", :class => "text w300" %>
    <%= f.select :current_working_state, WorkingState.to_a, {:include_blank => true}, {:label => "求职状态"} %>
  </div>
  
  <div class="left">
    <%= f.cktext_area :major %>
  </div>
<% end %>

<!-- ################ one to many info ################ -->
<% {
  :previous_jobs => "工作经历",
  :schools => "教育经历",
  :projects => "项目经验",
  :skills => "技能",
  :certifications => "证书",
  :languages => "语言能力",
  :cover_letters => "求职信"
  }.each do |key, value| %>
  <%= field_set_tag value, :class => 'big' do %>
    <% if f.object.send(key).blank? %>
      <div class="notice">没有添加<%= value %>。</div>
    <% end %>

    <%= f.fields_for key do |new_form| %>
      <%= render "jobseeker/#{key}/form", :f => new_form %>
    <% end %>

    <%= f.button_to_add_fields '添加', key, :namespace_dir => "jobseeker" %>
  <% end %>
<% end %>