<%= page_name_html("密码重置", :with_title => true) %>

<%= jobware_form_for @user, :url => update_password_path do |f| %>
  <% show_error_message_for(f.object) %>
  <%= f.password_field :password, :label => "新密码", :hint => "长度请控制在6到20位。" %>
  <%= f.password_field :password_confirmation, :label => "确认密码" %>
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.submit "更新" %>
<% end %>