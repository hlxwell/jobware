<script>
  $(function(){ $.each($(".city_selector"), function(i, n){ $(n).CitySelector(); }); })
</script>

<div class="main" id="main-two-columns-right-sidebar">
  <div class="right sidebar" id="sidebar-1">
    注意事项
  </div>

  <div class="left" id="main-left">
    <%= jobware_form_for @company, :use_fieldset => false do |f| %>
