<% title @company.name %>

<% content_for(:meta_info) do %>
  <meta name="keywords" content="<%= @company.tag_list << @company.name %>" />
  <meta name="description" content="<%= strip_tags(raw(@company.desc)).truncate(300).gsub(/\n/,'') %>"/>
<% end %>

<% show_no_record(@jobs) do %>
  <div class="archive-separator"></div>
  <%= render :partial => "jobs/job", :collection => @jobs, :locals => {:wide => true} %>
<% end %>