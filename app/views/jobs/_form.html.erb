<%= form_for @job do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location_province %><br />
    <%= f.text_field :location_province %>
  </p>
  <p>
    <%= f.label :location_city %><br />
    <%= f.text_field :location_city %>
  </p>
  <p>
    <%= f.label :vacancy %><br />
    <%= f.text_field :vacancy %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :requirement %><br />
    <%= f.text_area :requirement %>
  </p>
  <p>
    <%= f.label :welfare %><br />
    <%= f.text_area :welfare %>
  </p>
  <p>
    <%= f.label :salary_range %><br />
    <%= f.text_field :salary_range %>
  </p>
  <p>
    <%= f.label :highlight_start_at %><br />
    <%= f.datetime_select :highlight_start_at %>
  </p>
  <p>
    <%= f.label :highlight_end_at %><br />
    <%= f.datetime_select :highlight_end_at %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </p>
  <p><%= f.submit %></p>
<% end %>
