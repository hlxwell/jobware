<div class="main" id="main-three-columns-center">

	<div class="left sidebar" id="sidebar-1">
		<%= render "shared/ads/right_side/urgent_jobs" %>
	</div>

	<div class="left" id="main-center">
    <%= render "slider_ads" %>
	</div>

	<div class="right sidebar" id="sidebar-1">
		<%= render "shared/ads/right_side/urgent_jobs" %>
	</div>
  <div class="clearer">&nbsp;</div>
</div>

<div id="top_job_list">
  <div class="section network-section">
  	<div class="section-title">知名企业招聘</div>
  	<div class="section-content">

      <% (Company.all*3).each_with_index do |company, i| %>
      <div class="top-page-job <%= (i+1)%3 == 0 ? "right" : "left" %>">
        <div class="company-logo"><%= link_to image_tag(company.logo.url(:square)), company, :title => company.desc %></div>

        <div class="company-jobs">
          <h5><%= link_to company.name, company, :title => company.desc %></h5>
          <ul>
            <% company.jobs.limit(4).each do |job| %>
            <li>
    			    <%= link_to job.name, job, :title => job.desc, :class => "quiet" %>
    			    <strong class="quiet"><%= job.location %></strong>
    			  </li>
    			  <% end %>
          </ul>
        </div>
      </div>
      <% end %>

  	</div>
  </div>
  <div class="clearer">&nbsp;</div>
</div>

<div id="main_ad_zone">
  <img src="http://img03.taobaocdn.com/tps/i3/T1CI8KXndbXXXXXXXX-950-95.gif" class="left bordered" width="972" />
  <div class="clearer">&nbsp;</div>

	<img src="/images/logos/akihabaranews_logo_en.jpg" width="228" height="60" class="left bordered"/>
	<img src="/images/logos/akihabaranews_logo_en.jpg" width="228" height="60" class="left bordered"/>
	<img src="/images/logos/akihabaranews_logo_en.jpg" width="228" height="60" class="left bordered"/>
  <img src="/images/logos/akihabaranews_logo_en.jpg" width="228" height="60" class="right bordered"/>
	<div class="clearer">&nbsp;</div>
</div>

<div id="new_job_list">
  <div class="section network-section w318 left">
  	<div class="section-title">热门岗位</div>
  	<div class="section-content">
  		<ul class="nice-list">
  		  <% (Job.all*3).each do |job| %>
  			<li>
  			  <span style="font-weight: bold" class="right"><%= job.location %></span>
  			  <h4><%= link_to job.name, job %></h4>
  			  <%= link_to job.company.name, job.company %>
  			</li>
  		  <% end %>
  		</ul>
  	</div>
  </div>

  <div class="section network-section w318 left" style="margin: 0 1em 0 1.1em">
  	<div class="section-title">最新岗位</div>
  	<div class="section-content">
  		<ul class="nice-list">
  		  <% (Job.all*3).each do |job| %>
  			<li>
  			  <span style="font-weight: bold" class="right"><%= job.location %></span>
  			  <h4><%= link_to job.name, job %></h4>
  			  <%= link_to job.company.name, job.company %>
  			</li>
  		  <% end %>
  		</ul>
  	</div>
  </div>

  <div class="section network-section w318 right">
  	<div class="section-title">最新企业</div>
  	<div class="section-content">
  		<ul class="nice-list">
  		  <% (Ad.urgent_jobs*9).each do |ad| %>
  			<li>
  			  <span style="font-weight: bold" class="right"><%= ad.location %></span>
  			  <h4><%= link_to ad.company.name, ad.company %></h4>
  			  <%= link_to ad.name, ad.url, :title => ad.desc %>
  			</li>
  		  <% end %>
  		</ul>
  	</div>
  </div>
	<div class="clearer">&nbsp;</div>
</div>

<!-- foot dashboard -->
<% if content_for?(:footer_ad_zone) %>
  <%= yield(:footer_ad_zone) %>
<% else %>
  <%= render "shared/ads/bottom_ads" %>
<% end %>