<% companies = Company.limit(10).order("created_at DESC").all %>
<div class="section network-section w318 right">
	<div class="section-title">最新企业</div>
	<div class="section-content">
	  <% show_no_record(companies) do %>
		<ul class="nice-list">
		  <% companies.each do |company| %>
			<li>
			  <span style="font-weight: bold" class="right text-right">
			    <%= company.location %> <br/>
			    <%= company.created_at.to_s_short_date %>
			  </span>
			  <h4><%= link_to company.name.truncate(20), company %></h4>

			  <div class="clearer">&nbsp;</div>
			</li>
		  <% end %>
		</ul>
		<% end %>
	</div>
</div>