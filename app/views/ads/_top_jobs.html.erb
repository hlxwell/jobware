<% jobs = Job.opened.order("views_count desc").limit(7) %>
<div class="section network-section w318 left">
	<div class="section-title">热门岗位</div>
	<div class="section-content">

	  <% show_no_record(jobs) do %>
		<ul class="nice-list">
		  <% jobs.each do |job| %>
			<li>
			  <span style="font-weight: bold" class="right text-right">
			    <%= job.location %> <br/> 查看：<%= job.views_count_s %> 次
			  </span>
			  <h4><%= link_to job.name, job %></h4>
			  <%= link_to job.company.name, job.company %>
			</li>
		  <% end %>
		</ul>
		<% end %>

	</div>
</div>