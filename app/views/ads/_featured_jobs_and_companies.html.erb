<div class="section network-section">
	<div class="section-title">知名企业招聘</div>
	<div class="section-content">

    <% Company.all.each_with_index do |company, i| %>
    <div class="top-page-job <%= (i+1)%3 == 0 ? "right" : "left" %>">
      <div class="company-logo"><%= link_to image_tag(company.logo.url(:square)), company, :title => company.desc %></div>

      <div class="company-jobs">
        <h5><%= link_to company.name, company, :title => company.desc %></h5>
        <ul>
          <% company.jobs.published.limit(4).each do |job| %>
          <li>
  			    <%= link_to job.name, job, :title => job.desc, :class => "quiet" %>
  			    <strong class="quiet"><%= job.location %></strong>
  			  </li>
  			  <% end %>
        </ul>
      </div>
    </div>
    <% end %>

	</div>
</div>