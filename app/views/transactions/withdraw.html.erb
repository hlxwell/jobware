<%= page_name_html("提现", :with_title => true) %>

<%= jobware_form_for :transaction, :url => self.send("#{current_user_section}_transactions_path"), :use_fieldset => false do |f| %>
  <%= f.text_field :amount, :label => "提现金额", :hint => "请输入需要提现的金额。" %>
  <%= f.hidden_field :operation, :value => "withdraw!" %>
  <%= f.submit "提现", :class => "button" %>
<% end %>