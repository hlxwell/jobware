<% title "消费记录" %>

<script type="text/javascript">
  $(function() {
    $('#main-right').tabs(); // { cookie: { expires: 0 } }
  });
</script>

<!-- ### left main side -->
<div class="right" id="main-right">
  <ul class="larger">
    <% if current_user.jobseeker.present? %>
      <li><a href="#fragment-1"><span>现金消费记录</span></a></li>
      <li><a href="#fragment-2"><span>短信包月消费记录</span></a></li>
      <li><a href="#fragment-3"><span>简历高亮消费记录</span></a></li>
    <% elsif current_user.company.present? %>
      <li><a href="#fragment-1"><span>现金消费记录</span></a></li>
      <li><a href="#fragment-2"><span>岗位发布消费记录</span></a></li>
      <li><a href="#fragment-3"><span>广告A(首页大图)消费记录</span></a></li>
      <li><a href="#fragment-4"><span>广告B(首页推荐工作)消费记录</span></a></li>
      <li><a href="#fragment-5"><span>广告C(紧急招聘)消费记录</span></a></li>
      <li><a href="#fragment-6"><span>广告D(右推荐公司)消费记录</span></a></li>
      <li><a href="#fragment-7"><span>广告E(底推荐公司)消费记录</span></a></li>
    <% elsif current_user.partner.present? %>
      <li><a href="#fragment-1"><span>收益记录</span></a></li>
      <li><a href="#fragment-2"><span>提现记录</span></a></li>
    <% end %>
  </ul>

  <div id="fragment-1">
    <table class="data-table">
    	<tr>
    	  <th>类型</th>
    	  <th>来源</th>
    	  <th>去往</th>
    	  <th>时间</th>
    		<th>金额/数量</th>
        <th>剩余</th>
    	</tr>
    	<% total_amount = 0 %>
    	<% @money_transactions.each do |tx| %>
    	<% total_amount += tx.amount %>
    	<tr class="even">
    		<td><%= tx.credit_type_humanize %></td>
    		<td><%= tx.from %></td>
    		<td><%= tx.to %></td>
    		<td><%= tx.created_at.to_s_datetime %></td>
    		<td class="large"><%= format_price tx.amount, :with_plus => true %></td>
    		<td class="large"><%= format_price total_amount %></td>
    	</tr>
      <% end %>
    </table>
  </div>
	<div id="fragment-2">
	  <table class="data-table">
    	<tr>
    	  <th>类型</th>
    	  <th>来源</th>
    	  <th>去往</th>
    	  <th>时间</th>
    		<th>金额/数量</th>
        <th>剩余</th>
    	</tr>
    	<% total_amount = 0 %>
    	<% @sms_transactions.each do |tx| %>
    	<% total_amount += tx.amount %>
    	<tr class="even">
    		<td><%= tx.credit_type_humanize %></td>
    		<td><%= tx.from %></td>
    		<td><%= tx.to %></td>
    		<td><%= tx.created_at.to_s_datetime %></td>
    		<td class="large"><%= format_price tx.amount, :with_plus => true %></td>
    		<td class="large"><%= format_price total_amount %></td>
    	</tr>
      <% end %>
    </table>
	</div>
</div>