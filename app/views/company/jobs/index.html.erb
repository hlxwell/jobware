<% title "工作管理" %>

<% show_no_record(@jobs) do %>
  <table class="data-table">
  	<tr>
  	  <th>工作名</th>
  		<th>所在省市</th>
  		<th>更新时间</th>
  		<th>状态</th>
  		<th>操作</th>
  	</tr>
  	<% @jobs.each do |job| %>
  	<tr class="even">
  	  <td><%= link_to job.name, company_job_path(job) %></td>
  		<td><%= job.location %></td>
  		<td><%= job.updated_at.to_s_datetime %></td>
  		<td style="color: <%= job.font_color %>"><%= job.state_s %></td>
  		<td>
  		  <%= link_to "修改", edit_company_job_path(job) %>
  		  <%= link_to "关闭", close_company_job_path(job) if job.approved? %>
  		</td>
  	</tr>
    <% end %>
  </table>
  <%= will_paginate @jobs %>
<% end %>