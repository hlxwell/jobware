<%= f.error_messages %>
<%= f.fields_for :image do |image_form| %>
  <%= image_form.text_field :name, :label => "广告标题", :class => "text w600", :hint => "最大长度为20个中文字。" %>
  <%= f.text_field :url, :label => "广告链接地址", :hint => "点击广告后跳转的地址。", :class => "text w600" %>
  <%= image_form.cktext_area(:desc, :height => '200px', :toolbar=>'Basic', :skin => "v2", :label => "广告内容") %>
  <%= image_form.file_field :file, :label => "广告图片", :class => "text w600" %>
  <%= image_tag image_form.object.file.url if image_form.object.file.size %>
<% end %>