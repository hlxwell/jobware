<% show_error_message_for(f.object) %>
<%= f.hidden_field :display_type %>
<%= f.text_field :name, :label => "广告标题", :class => "text w600", :hint => "最大长度为20个中文字。" %>
<%= f.city_select :province, :city, :label => "工作所在地" %>
<%= f.text_field :url, :label => "广告链接地址", :hint => "点击广告后跳转的地址。", :class => "text w600" %>
<%= f.text_field :period, :label => "展示周期", :class => "text w600", :hint => "单位：周" %>
<%= image_tag f.object.image.url if f.object.image.size %>