<h1>Listing mail_templates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mail_templates.each do |mail_template| %>
  <tr>
    <td><%= mail_template.name %></td>
    <td><%= mail_template.body %></td>
    <td><%= link_to 'Show', mail_template %></td>
    <td><%= link_to 'Edit', edit_mail_engine_mail_template_path(mail_template) %></td>
    <td><%= link_to 'Destroy', mail_template, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

